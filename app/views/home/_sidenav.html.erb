<div class="sticky">
    <div class="padding4">
        <div>
            <%=image_tag current_user.image.variant(resize: "50x50"),class:"image" rescue image_tag 'default.jpg', class:"image1 mr-3"%>
            <span class="pl-3"><%=current_user.username%></span> 
        </div>
    </div>
    <div class="d-flex flex-column flex-shrink-0 p-3 bg-light sidenav ">
        <ul class="nav nav-pills flex-column mb-auto boader">
            <% [['Home', 'home'], ['People', 'users'], ['Profile', 'user'], ['Setting','cog']].each do |tab| %>
                <li class="nav-item boader">
                <a href="#" class="nav-link link-dark " aria-current="page">
                    <i class="pr-4 fa fa-<%=tab[1]%>" aria-hidden="true"></i>
                    <span class="bi me-2" width="16" height="16"></span>
                        <%= tab[0] %>
                </a>
                </li>
            <%end%>
                <li class="nav-item boader">
                <a href="#" class="nav-link link-dark pr-0">
                    <i class="fa fa-cog" aria-hidden="true"></i>
                    <% if user_signed_in? %>
                    <%=  link_to "Sign_out", destroy_user_session_path, method: :delete,data: {confirm: "are you sure you want to logout"}, class: "nav-link" %>
                    <% else %>
                    <%= link_to "Sign_in", new_user_session_path, class: "nav-link bg-primary"  %> 
                    <% end %>
                </a>
                </li>
        </ul>
    </div>
</div>    